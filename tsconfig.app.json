{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue",
        "src/**/*.json",
        "movies.json",
        "api/**/*.ts",
        "tests/**/*.ts",
        "*.ts"
    ],
    "exclude": [
        "src/**/__tests__/*"
    ],
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "ESNext"
        ],
        "composite": true,
        "baseUrl": ".",
        "types": [
            "vite/client"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    }
}